---
import Mainlayout from "../layouts/Mainlayout.astro";
import { Image } from "astro:assets";
import error from '../images/error-404.png'
---
<Mainlayout title="404-Page not found">
    <div class="flex flex-col item-center justify-items-center gap-7">
        <Image src={error} alt="404-Page not found" height={250} width={250} class="mt-10"/>
        <h1 class="text-5xl">404-Page not found</h1>
        <p class="text-2xl mb-10 ">Sorry ,we could not find your page you were looking for</p>
        <a href="/" class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white">Go Back Home</a>
    </div>
</Mainlayout>